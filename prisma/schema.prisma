generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  CreatedAt DateTime @default(now())
}

model Administrador {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  CreatedAt DateTime @default(now())
}

model Car {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  type        String
  price       Float
  stock       Int
  description String
  image_links String[]
  audio_link  String
  CreatedAt   DateTime @default(now())
}

model Schedules {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  date     String
  time     String
  userName String
}
